    </footer>
    <script>
        function showDetails(type) {
            const detailsSection = document.createElement('section');
            detailsSection.id = 'details';
            detailsSection.innerHTML = `
                <h2>تفاصيل ${type === 'movie' ? 'الفيلم' : 'المسلسل'}</h2>
                <img src="${type === 'movie' ? 'movie-poster.jpg' : 'series-poster.jpg'}" alt="Poster">
                <p>وصف كامل للفيلم أو المسلسل.</p>
                <a href="#" onclick="closeDetails()">إغلاق</a>
            `;
            document.querySelector('main').innerHTML = '';
            document.querySelector('main').appendChild(detailsSection);
        }
        function closeDetails() {
            location.reload();
        }
    </script>
</body>
