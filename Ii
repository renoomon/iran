const express = require('express');
const bodyParser = require('body-parser');
const app = express();

app.use(bodyParser.json());

app.get('/', (req, res) => {
  res.send('Welcome to the Explicit Movie Recommendations API');
});

app.post('/recommendations', (req, res) => {
  const { preferences } = req.body;

  // مثال على توصيات وهمية
  const recommendations = [
    {
      "name": "Love",
      "year": 2015,
      "type": "فيلم",
      "nudity_level": "100%",
      "nudity_type": "تعري كامل 🔞",
      "genitals_shown": "نعم 🥵",
      "penetration": "نعم",
      "most_explicit_scene": "مشهد جنسي حقيقي 🌶",
      "banned_scenes": "لا",
      "scene_found": "نعم 🫦",
      "description": "فيلم يتبع قصة حب عاطفية وجنسية.",
      "country": "فرنسا 🇫🇷"
    },
    // إضافة المزيد من التوصيات هنا...
  ];

  res.json(recommendations);
});

const PORT = process.env.PORT || 3000;
app.listen(PORT, () => {
  console.log(`Server is running on port ${PORT}`);
});
