    <main>
        <section id="movies">
            <h2>أفلام</h2>
            <div class="card">
                <img src="movie-poster.jpg" alt="Movie Poster">
                <h3>اسم الفيلم</h3>
                <p>وصف مختصر عن الفيلم.</p>
                <a href="#details" onclick="showDetails('movie')">تفاصيل</a>
            </div>
            <!-- إضافة المزيد من الأفلام -->
        </section>
        <section id="series">
            <h2>مسلسلات</h2>
            <div class="card">
                <img src="series-poster.jpg" alt="Series Poster">
                <h3>اسم المسلسل</h3>
                <p>وصف مختصر عن المسلسل.</p>
                <a href="#details" onclick="showDetails('series')">تفاصيل</a>
